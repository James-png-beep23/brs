      <div class="mb-5">
        <h4 class="text-primary-500 text-sm font-medium mb-1.5">Show Alert</h4>
        <div class="flex items-center space-x-2.5 mb-3" x-data="{toggleOn: false}">
          <button
            id="for_frontend"
            type="button"
            class="relative inline-flex flex-shrink-0 h-6 transition-colors duration-200 ease-in-out bg-gray-300 border-2 border-transparent rounded-full cursor-pointer w-11 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
            role="switch"
            aria-checked="false"
            x-on:click="toggleOn = !toggleOn"
            x-bind:class="{'bg-primary-600': toggleOn, 'bg-gray-300': !toggleOn}"
          >
            <span class="sr-only">Use setting</span>
            <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
            <span
              aria-hidden="true"
              class="inline-block w-5 h-5 transition duration-200 ease-in-out bg-white rounded-full shadow pointer-events-none ring-0"
              x-bind:class="{'translate-x-0': !toggleOn, 'translate-x-[100%]': toggleOn}"
            >
            </span>
          </button>
          <label for="for_frontend" class="text-sm font-medium text-primary-500">
            Show on Front end
          </label>
        </div>
        <div class="flex items-center space-x-2.5" x-data="{toggleOn: false}">
          <button
            id="for_backend"
            type="button"
            class="relative inline-flex flex-shrink-0 h-6 transition-colors duration-200 ease-in-out bg-gray-300 border-2 border-transparent rounded-full cursor-pointer w-11 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
            role="switch"
            aria-checked="false"
            x-on:click="toggleOn = !toggleOn"
            x-bind:class="{'bg-primary-600': toggleOn, 'bg-gray-300': !toggleOn}"
          >
            <span class="sr-only">Use setting</span>
            <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
            <span
              aria-hidden="true"
              class="inline-block w-5 h-5 transition duration-200 ease-in-out bg-white rounded-full shadow pointer-events-none ring-0"
              x-bind:class="{'translate-x-0': !toggleOn, 'translate-x-[100%]': toggleOn}"
            >
            </span>
          </button>
          <label for="for_backend" class="text-sm font-medium text-primary-500">
            Show on Back end
          </label>
        </div>
      </div>
      <!-- alert type -->
      <div class="mb-5">
        <div class="mb-5">
          <fieldset>
            <legend class="text-sm font-semibold leading-6 text-primary-500">Alert Type</legend>

            <div class="mt-1.5 space-y-6 sm:flex sm:items-center sm:space-x-10 sm:space-y-0">
              <div class="flex items-center">
                <input
                  id="none"
                  name="alert-type"
                  type="radio"
                  class="w-4 h-4 border-gray-300 text-primary-600 focus:ring-primary-600"
                />
                <label for="none" class="block ml-3 text-sm font-medium leading-6 text-gray-900">
                  None
                </label>
              </div>
              <div class="flex items-center">
                <input
                  id="danger"
                  name="alert-type"
                  type="radio"
                  class="w-4 h-4 border-gray-300 text-primary-600 focus:ring-primary-600"
                />
                <label for="danger" class="block ml-3 text-sm font-medium leading-6 text-gray-900">
                  Danger
                </label>
              </div>
              <div class="flex items-center">
                <input
                  id="warning"
                  name="alert-type"
                  type="radio"
                  class="w-4 h-4 border-gray-300 text-primary-600 focus:ring-primary-600"
                />
                <label
                  for="warning"
                  class="block ml-3 text-sm font-medium leading-6 text-gray-900"
                >
                  Warning
                </label>
              </div>
              <div class="flex items-center">
                <input
                  id="information"
                  name="alert-type"
                  type="radio"
                  class="w-4 h-4 border-gray-300 text-primary-600 focus:ring-primary-600"
                />
                <label
                  for="information"
                  class="block ml-3 text-sm font-medium leading-6 text-gray-900"
                >
                  Information
                </label>
              </div>
              <div class="flex items-center">
                <input
                  id="success"
                  name="alert-type"
                  type="radio"
                  class="w-4 h-4 border-gray-300 text-primary-600 focus:ring-primary-600"
                />
                <label
                  for="success"
                  class="block ml-3 text-sm font-medium leading-6 text-gray-900"
                >
                  Success
                </label>
              </div>
            </div>
          </fieldset>
        </div>
        <div>
          <div class="flex h-6 items-center space-x-2.5">
            <input
              id="dismiss"
              aria-describedby="dismiss-description"
              name="dismiss"
              type="checkbox"
              class="w-4 h-4 border-gray-300 rounded text-primary-600 focus:ring-primary-600"
            />
            <label for="dismiss" class="text-sm font-medium text-primary-600">
              Allow dismiss action
            </label>
          </div>
        </div>
      </div>
      <!-- expiry date -->
      <div>
        <label for="expiry_date" class="inline-block text-sm font-medium leading-6 text-gray-900">
          Expiry date
        </label>
        <div class="relative mt-1.5 rounded-md shadow-sm">
          <input
            type="date"
            name="expiry_date"
            id="expiry_date"
            class="block w-full rounded-md border-0 py-1.5  text-primary-600 ring-1 ring-inset ring-gray-300 placeholder:text-gray-300 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6"
          />
        </div>
      </div>
      <div class="flex items-center space-x-2.5 mb-5" x-data="{toggleOn: false}">
        <button
          id="publish_the_announcement"
          type="button"
          class="relative inline-flex flex-shrink-0 h-6 transition-colors duration-200 ease-in-out bg-gray-300 border-2 border-transparent rounded-full cursor-pointer w-11 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
          role="switch"
          aria-checked="false"
          x-on:click="toggleOn = !toggleOn"
          x-bind:class="{'bg-primary-600': toggleOn, 'bg-gray-300': !toggleOn}"
