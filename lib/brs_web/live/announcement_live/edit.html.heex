          <textarea
            rows="4"
            name="comment"
            id="comment"
            class="block w-full px-3 py-5 text-gray-900 border-0 rounded-b-lg shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-500 sm:text-sm sm:leading-6"
          ></textarea>
